@model HTTP5101_Cumulative_Pt3_Natasha_Chambers.Models.Student
@{
    ViewBag.Title = "DeleteConfirmation";
}

<nav>
    <a class="navLink" href="/Student/Show/@Model.StudentId">Cancel</a>
</nav>

<div class="delConfirmPage">

    <h2>Are you sure you want to delete @Model.StudentFname @Model.StudentLname</h2>
    <p>This action can not be undone.</p>

    <form method="POST" action="/Student/Delete/@Model.StudentId">
        <button class="deleteBtn">Confirm Delete</button>
    </form>
</div>